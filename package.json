{
	"name": "mc-datapack",
	"displayName": "MC Datapack",
	"description": "Makes the creation of Minecraft datapacks easier.",
	"icon": "images/icon.png",
	"version": "0.0.5",
	"author": "HuJohner",
	"publisher": "HuJohner",
	"homepage": "https://www.youtube.com/c/HuJohner",
	"engines": {
		"vscode": "^1.44.0"
	},
	"license": "MIT",
	"categories": [
		"Other"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/HuJohner/vscode-mc-datapack-ext.git"
	},
	"activationEvents": [
		"onCommand:mc-datapack.newDatapack",
		"onCommand:mc-datapack.newMcfunction",
		"onCommand:mc-datapack.openRecipeEditor"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "MC Datapack",
			"properties": {
				"mc-datapack.username": {
					"type": "string",
					"scope": "resource",
					"default": "",
					"description": "Value to use to replace <author> variable."
				},
				"mc-datapack.version": {
					"type": "string",
					"enum": [
						"1.13",
						"1.14",
						"1.15",
						"1.16",
						"1.17"
					],
					"default": "1.16",
					"description": "Value to use to replace <version> variable."
				}
			}
		},
		"commands": [
			{
				"command": "mc-datapack.newDatapack",
				"title": "New Datapack",
				"category": "Datapack"
			},
			{
				"command": "mc-datapack.newMcfunction",
				"title": "New MCFunction File",
				"category": "Datapack"
			},
			{
				"command": "mc-datapack.openRecipeEditor",
				"title": "Open Recipe Editor",
				"category": "Datapack"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "mc-datapack.newDatapack",
					"group": "mc-datapack"
				},
				{
					"command": "mc-datapack.newMcfunction",
					"group": "mc-datapack"
				}
			],
			"editor/context": [
				{
					"when": "resourceLangId == json && resource =~ /recipes/",
					"command": "mc-datapack.openRecipeEditor",
					"group": "mc-datapack"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js",
		"deploy": "vsce publish --yarn"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.44.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"@typescript-eslint/parser": "^2.26.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.1",
		"typescript": "^3.8.3",
		"vsce": "^1.84.0",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"minecraft-textures": "^1.16.0-beta.5",
		"yarn": "^1.22.10"
	}
}
